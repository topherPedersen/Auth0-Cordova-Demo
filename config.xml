<?xml version='1.0' encoding='utf-8'?>
<widget id="blog.topherpedersen.auth0cordovademo" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Auth0 Cordova Demo</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />


    <preference name="AndroidLaunchMode" value="singleTask" />
    <plugin name="cordova-plugin-customurlscheme" spec="~4.2.0">
        <variable name="URL_SCHEME" value="blog.topherpedersen.auth0cordovademo" />
        <variable name="ANDROID_SCHEME" value="blog.topherpedersen.auth0cordovademo" />
        <variable name="ANDROID_HOST" value="topherpedersen.auth0.com" />
        <variable name="ANDROID_PATHPREFIX" value="/cordova/blog.topherpedersen.auth0cordovademo/callback" />
    </plugin>
    <plugin name="cordova-plugin-safariviewcontroller" spec="~1.4.6" />

    <platform name="android">
        <allow-intent href="market:*" />
    </platform>

    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>

</widget>
